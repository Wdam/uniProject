.goods_list {
  padding: 0 15rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.goods_list .goods_item {
  margin: 10rpx 0;
  background-color: #FFFFFF;
  width: 355rpx;
  padding: 15rpx;
  box-sizing: border-box;
}
.goods_list .goods_item image {
  display: block;
  width: 70%;
  height: 150px;
  margin: 0 auto;
}
.goods_list .price {
  color: #b50e03;
  font-size: 40rpx;
}
.goods_list .price text:nth-child(2) {
  margin-left: 10rpx;
  color: pink;
  font-size: 20rpx;
  text-decoration: line-through;
}
.goods_list .title {
  font-size: 28rpx;
  line-height: 50rpx;
  padding-bottom: 15rpx;
  padding-top: 10rpx;
}

