.page-section-spacing swiper {
  height: 414rpx;
}
.page-section-spacing swiper swiper-item image {
  width: 100%;
  height: 100%;
}
.nav {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-top: 40rpx;
}
.nav .nav-item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  text-align: center;
  width: 25%;
}
.nav .nav-item text {
  font-size: 15px;
}
.nav .nav-item view {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: red;
  margin: 10px auto;
  line-height: 120rpx;
  color: #FFFDEF;
  font-size: 80rpx;
}
.hot_goods {
  background-color: #eee;
  overflow: hidden;
  margin-top: 10px;
}
.hot_goods .tit {
  height: 50px;
  line-height: 50px;
  color: #b50e03;
  text-align: center;
  letter-spacing: 20px;
  background-color: #ffffff;
  margin: 15rpx 0;
  font-size: 25px;
}

