page {
  height: 100%;
}
.pics {
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  background-color: #b4b3b3;
}
.pics .left {
  width: 200rpx;
  height: 100%;
  background-color: pink;
  border-right: 1px solid #000000;
}
.pics view {
  height: 60px;
  line-height: 60px;
  color: #333;
  text-align: center;
  font-size: 30rpx;
  border-top: 1px solid #000000;
}
.pics .active {
  background-color: red;
  color: #FFFFFF;
}
.pics .right {
  height: 100%;
  width: 530rpx;
  margin: 10rpx auto;
}
.pics .right .item {
  height: 70%;
}
.pics .right .item image {
  width: 530rpx;
  height: 530rpx;
  border-radius: 5rpx;
  background-color: pink;
}
.pics .right .item text {
  font-size: 40rpx;
  line-height: 30rpx;
}

